<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="?attr/actionBarSize"
    android:paddingHorizontal="8dp"
    android:background="@color/very_dark_grey">

    <TextView
        android:id="@+id/addIncomeCategoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="@color/white"
        android:gravity="center|center_horizontal"
        android:text="ADD INCOME SOURCE"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <EditText
        android:id="@+id/editTextIncomeCategoryName"  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Income Source Name"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/buttonAddIncomeCategory"  android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Add Income"
        android:backgroundTint="@color/white"
        android:textColor="@color/very_dark_grey"/>

</LinearLayout>