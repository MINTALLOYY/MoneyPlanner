<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item android:drawable="@android:color/transparent" /> <!-- or any color you want for the background -->

    <!-- Top line -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:height="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_grey" />
        </shape>
    </item>

    <!-- Bottom line -->
    <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:height="2dp" android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_grey" />
        </shape>
    </item>
</layer-list>