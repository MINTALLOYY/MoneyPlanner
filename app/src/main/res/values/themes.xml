<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MoneyPlanner.NoActionBar" parent="Theme.Material3.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MoneyPlanner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MoneyPlanner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MoneyPlanner.BlackMoney" parent="Theme.Material3.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="background">@color/black</item>
        <item name="colorTertiary">@color/white</item>
    </style>

    <style name="Theme.MoneyPlanner.LightMoney" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/off_white</item>
    </style>

    <style name="buttons" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/off_white</item>
        <item name="android:tint">@color/black</item>
        <item name="tint">@color/black</item>
        <item name="cornerRadius">4dp</item>
    </style>
    <style name="secondaryButtons" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/off_white</item>
        <item name="android:backgroundTint">@color/off_white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:tint">@color/black</item>
        <item name="rippleColor">@color/white</item>
        <item name="cornerRadius">4dp</item>
    </style>
    <style name="editText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>
    <style name="pageHeaders" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="datePickers">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>
    <style name="darkCardText">
        <item name="android:textColor">@color/off_white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>
    <style name="recyclerView">
        <item name="android:background">@drawable/white_container</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="layout_constrainedHeight">true</item>
        <item name="layout_constraintVertical_bias">0</item>
    </style>
    <style name="greenTextCard">
        <item name="android:background">@drawable/green_container</item>
        <item name="android:textColor">@color/green_text</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="redTextCard">
        <item name="android:background">@drawable/red_container</item>
        <item name="android:textColor">@color/red_text</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="goldTextCard">
        <item name="android:background">@drawable/gold_container</item>
        <item name="android:textColor">@color/dark_gold</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="horizontalDividerSetUp">
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/grey</item>
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>
    <style name="coloredDividerSetUp" parent="horizontalDividerSetUp">
        <item name="android:layout_height">1dp</item>
    </style>

</resources>